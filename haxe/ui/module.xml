            <var name="dialog.text.title.color" value="#909090" />
            <var name="dialog.border.color" value="#ababab" />
            <var name="dialog.filter.shadow" value="drop-shadow(1, 45, #000000, 0.2, 30, 2, 1, 3, false)" />
            
            <!-- selection colors -->
            <var name="selection.background.color" value="#a7c4e2" />
            <var name="selection.background.color.disabled" value="#ededed" />
            <var name="selection.text.color" value="#ffffff" />
            <var name="selection.text.disabled.color" value="#c2c2c2" />
            
            <!-- "flat" items, like scrollbar buttons -->
            <var name="flat.background.color" value="#e9e9e9" />
            <var name="flat.background.hover.color" value="#d7d7d7" />
            <var name="flat.background.down.color" value="#525252" />
            <var name="flat.background.disabled.color" value="#dddddd" />
            
            <!-- some general vars -->
